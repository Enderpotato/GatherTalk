<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Com chat</title>
    <link rel="stylesheet" href="/styles/style.css" />
    <link rel="stylesheet" href="/styles/comment.css" />
  </head>
  <body>
    <%-include("./partials/navbar.ejs") %>

    <main>
      <h1>Chat</h1>

      <div id="chat"></div>
      <form onsubmit="addComment(event)" id="comment-form">
        <textarea
          id="comment-author-input"
          type="text"
          placeholder="Type your name here..."
          rows="1"
        ></textarea>
        <textarea
          id="comment-text-input"
          type="text"
          placeholder="Type something here..."
        ></textarea>
        <button id="comment-submit-button">Post comment</button>
      </form>
      <button onclick="clearSaved()">Clear local storage</button>
    </main>

    <script src="/src/Thread.js" type="text/javascript"></script>
    <script src="/src/Comment.js"></script>
    <script src="/src/page.js"></script>
    <script src="/src/form.js"></script>
    <script src="/src/main.js"></script>
  </body>
</html>
